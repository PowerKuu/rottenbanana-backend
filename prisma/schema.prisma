// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Gender {
  MALE
  FEMALE
}

// ── AUTH MODELS — DO NOT MODIFY ────────────────────────────────────────────
// Managed by better-auth. Only domain back-reference fields added to User.
model User {
  id            String  @id
  name          String
  email         String
  emailVerified Boolean @default(false)
  image      String?
  role          String  @default("USER")

  sessions       Session[]
  accounts       Account[]
  tryOnOutfits   TryOnOutfit[]
  postLikes      PostLike[]
  PreferenceTags UserPreferenceTag[]
  ownedOutfits   Outfit[]

  gender Gender
  referenceImageUrl String
  aiNormalizedReferenceImageUrl String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  ipAddress String?
  userAgent String?

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

model PreferenceTag {
  id  String @id @default(cuid())
  tag String @unique

  userPreferenceTags   UserPreferenceTag[]
  outfitPreferenceTags OutfitPreferenceTag[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}



model Store {
  id           String @id @default(cuid())
  name         String
  websiteUrl          String
  imageUrl String

  products Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ProductSlot {
  TOP
  MIDDLE
  BOTTOM
  FOOTWEAR
  ACCESSORY
}

model Product {
  id                String      @id @default(cuid())
  name              String
  price             Float
  primaryImageUrl   String  
  imageUrls         String[]

  description  String
  metadata     Json
  url          String
  slot         ProductSlot

  storeId String
  store   Store        @relation(fields: [storeId], references: [id], onDelete: Restrict)
  outfitItems OutfitProduct[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([storeId])
}

model Outfit {
  id          String  @id @default(cuid())
  name        String
  description String?
  official    Boolean

  ownerId String?
  owner   User?   @relation(fields: [ownerId], references: [id], onDelete: SetNull)

  products          OutfitProduct[]
  tryOnOutfits         TryOnOutfit[]
  posts                Post[]
  outfitPreferenceTags OutfitPreferenceTag[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([ownerId])
}

model OutfitProduct {
  outfitId  String
  productId String

  outfit  Outfit  @relation(fields: [outfitId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@id([outfitId, productId])
  @@index([productId])
}

model TryOnOutfit {
  id                  String      @id @default(cuid())
  referenceImageUrl   String
  resultImageUrls     String[]

  outfitId String
  outfit   Outfit @relation(fields: [outfitId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([outfitId])
  @@index([userId])
}

model Post {
  id        String   @id @default(cuid())
  caption   String?
  imageUrls String[]

  outfitId String
  outfit   Outfit     @relation(fields: [outfitId], references: [id], onDelete: Restrict)

  postLikes PostLike[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([outfitId])
}

model PostLike {
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  postId String
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@id([userId, postId])
  @@index([postId])
}

model UserPreferenceTag {
  score Int @default(0)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  preferenceTagId String
  preferenceTag   PreferenceTag @relation(fields: [preferenceTagId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([userId, preferenceTagId])
  @@index([preferenceTagId])
  @@index([userId, score(sort: Desc)])
}

model OutfitPreferenceTag {
  outfitId String
  outfit   Outfit @relation(fields: [outfitId], references: [id], onDelete: Cascade)

  preferenceTagId String
  preferenceTag   PreferenceTag @relation(fields: [preferenceTagId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@id([outfitId, preferenceTagId])
  @@index([preferenceTagId])
}
