// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Gender {
  MALE
  FEMALE
}

// ── AUTH MODELS — DO NOT MODIFY ────────────────────────────────────────────
// Managed by better-auth. Only domain back-reference fields added to User.
model User {
  id            String  @id
  name          String
  email         String
  emailVerified Boolean @default(false)
  image         String?
  role          String  @default("USER")

  sessions       Session[]
  accounts       Account[]
  tryOnOutfits   TryOnOutfit[]
  postLikes      PostLike[]
  PreferenceTags UserPreferenceTag[]

  gender                        Gender
  referenceImageUrl             String
  aiNormalizedReferenceImageUrl String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  ipAddress String?
  userAgent String?

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

model PreferenceTag {
  id  String @id @default(cuid())
  tag String @unique

  userPreferenceTags   UserPreferenceTag[]
  postPreferenceTags PostPreferenceTag[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Store {
  id         String @id @default(cuid())
  identifier String @unique

  name       String
  websiteUrl String
  websiteOrigins String[]

  imageUrl   String

  products Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ProductSlot {
  UNDERSHIRT
  SHIRT
  OVERSHIRT
  JACKET
  UNDERPANTS
  PANTS
  SOCKS
  SHOES

  GLASSES
  BELT
  HAT
  OTHER
}

model Product {
  id              String   @id @default(cuid())
  name            String
  price           Float
  primaryImageUrl String
  imageUrls       String[]

  description String?
  brand       String?
  metadata    Json
  url         String
  slot        ProductSlot

  storeId          String
  store            Store                @relation(fields: [storeId], references: [id], onDelete: Restrict)
  tryOnOutfitItems TryOnOutfitProduct[]
  postProducts     PostProduct[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([storeId])
}

model TryOnOutfit {
  id                String   @id @default(cuid())
  referenceImageUrl String
  resultImageUrls   String[]


  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  products TryOnOutfitProduct[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model TryOnOutfitProduct {
  tryOnOutfitId String
  productId     String

  tryOnOutfit TryOnOutfit @relation(fields: [tryOnOutfitId], references: [id], onDelete: Cascade)
  product     Product     @relation(fields: [productId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@id([tryOnOutfitId, productId])
  @@index([productId])
  @@index([tryOnOutfitId])
}

model PostProduct {
  productId String
  postId    String

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  post    Post    @relation(fields: [postId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@id([productId, postId])
  @@index([postId])
  @@index([productId])
}

model Post {
  id        String   @id @default(cuid())
  caption   String?
  imageUrls String[]


  likes PostLike[]
  preferenceTags PostPreferenceTag[]
  products PostProduct[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  isOfficial Boolean @default(false)
}

model PostLike {
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  postId String
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@id([userId, postId])
  @@index([postId])
}

model UserPreferenceTag {
  score Int @default(0)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  preferenceTagId String
  preferenceTag   PreferenceTag @relation(fields: [preferenceTagId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([userId, preferenceTagId])
  @@index([preferenceTagId])
  @@index([userId, score(sort: Desc)])
}

model PostPreferenceTag {
  postId String
  post  Post   @relation(fields: [postId], references: [id], onDelete: Cascade)

  preferenceTagId String
  preferenceTag   PreferenceTag @relation(fields: [preferenceTagId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@id([postId, preferenceTagId])
  @@index([preferenceTagId])
}
