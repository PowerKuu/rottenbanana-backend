// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ── AUTH MODELS — DO NOT MODIFY ────────────────────────────────────────────
// Managed by better-auth. Only domain back-reference fields added to User.

model User {
  id            String  @id
  name          String
  email         String
  emailVerified Boolean @default(false)
  image         String?
  role          String  @default("USER")

  sessions       Session[]
  accounts       Account[]
  tryOnOutfits   TryOnOutfit[]
  postLikes      PostLike[]
  PreferenceTags UserPreferenceTag[]
  ownedOutfits   Outfit[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  ipAddress String?
  userAgent String?

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

model PreferenceTag {
  id  String @id @default(cuid())
  tag String @unique

  userPreferenceTags   UserPreferenceTag[]
  outfitPreferenceTags OutfitPreferenceTag[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Vendor {
  id        String @id @default(cuid())
  name      String
  url       String
  logoImage String

  items Item[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ItemSlot {
  TOP
  BOTTOM
  SHOES
  ACCESSORY
}

model Item {
  id           String   @id @default(cuid())
  name         String
  price        Float
  primaryImage String
  images       String[]
  description  String
  metadata     Json
  url          String
  slot         ItemSlot

  vendorId String
  vendor   Vendor       @relation(fields: [vendorId], references: [id], onDelete: Restrict)
  outfitItems OutfitItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([vendorId])
}

model Outfit {
  id          String  @id @default(cuid())
  name        String
  description String?
  official    Boolean

  ownerId String?
  owner   User?   @relation(fields: [ownerId], references: [id], onDelete: SetNull)

  outfitItems          OutfitItem[]
  tryOnOutfits         TryOnOutfit[]
  posts                Post[]
  outfitPreferenceTags OutfitPreferenceTag[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([ownerId])
}

model OutfitItem {
  outfitId String
  itemId   String

  outfit Outfit @relation(fields: [outfitId], references: [id], onDelete: Cascade)
  item   Item   @relation(fields: [itemId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@id([outfitId, itemId])
  @@index([itemId])
}

model TryOnOutfit {
  id             String      @id @default(cuid())
  refrenceImages String[]
  resultImages   String[]

  outfitId String
  outfit   Outfit @relation(fields: [outfitId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([outfitId])
  @@index([userId])
}

model Post {
  id      String   @id @default(cuid())
  caption String?
  images  String[]

  outfitId String
  outfit   Outfit     @relation(fields: [outfitId], references: [id], onDelete: Restrict)

  postLikes PostLike[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([outfitId])
}

model PostLike {
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  postId String
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@id([userId, postId])
  @@index([postId])
}

model UserPreferenceTag {
  score Int @default(0)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  PreferenceTagId String
  preferenceTag   PreferenceTag @relation(fields: [PreferenceTagId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([userId, PreferenceTagId])
  @@index([PreferenceTagId])
  @@index([userId, score(sort: Desc)])
}

model OutfitPreferenceTag {
  outfitId String
  outfit   Outfit @relation(fields: [outfitId], references: [id], onDelete: Cascade)

  PreferenceTagId String
  preferenceTag   PreferenceTag @relation(fields: [PreferenceTagId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@id([outfitId, PreferenceTagId])
  @@index([PreferenceTagId])
}
